{
  "connection": "default",
  "collectionName": "advertises",
  "info": {
    "name": "advertise",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": [
      "created_at",
      "updated_at"
    ],
    "comment": ""
  },
  "attributes": {
    "title": {
      "maxLength": 40,
      "required": true,
      "minLength": 8,
      "type": "string"
    },
    "description": {
      "maxLength": 500,
      "required": true,
      "minLength": 10,
      "type": "text"
    },
    "submitted": {
      "type": "boolean"
    },
    "active": {
      "type": "boolean"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "plugin": "upload"
    },
    "services": {
      "collection": "service",
      "via": "advertise"
    },
    "user": {
      "model": "user",
      "via": "advertises",
      "plugin": "users-permissions"
    },
    "sponsored": {
      "type": "boolean"
    },
    "ontop": {
      "type": "boolean"
    },
    "class": {
      "required": true,
      "enum": [
        "car",
        "house"
      ],
      "type": "enumeration"
    },
    "price": {
      "type": "biginteger"
    },
    "currency": {
      "enum": [
        "rial",
        "dollar"
      ],
      "required": true,
      "type": "enumeration"
    },
    "areaOfBuilding": {
      "type": "integer"
    },
    "byAgency": {
      "type": "boolean"
    },
    "ageOfBuilding": {
      "type": "integer"
    },
    "numberOfRooms": {
      "type": "integer"
    },
    "deposits": {
      "type": "biginteger"
    },
    "rent": {
      "type": "biginteger"
    },
    "yearOfConstruction": {
      "type": "integer"
    },
    "kilometers": {
      "type": "integer"
    },
    "manufacturer": {
      "type": "string"
    },
    "requesting": {
      "type": "boolean"
    },
    "phone": {
      "maxLength": 15,
      "minLength": 8,
      "type": "string"
    }
  }
}